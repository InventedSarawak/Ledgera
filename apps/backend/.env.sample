LEDGERA_PRIMARY.ENV="local"

LEDGERA_SERVER.PORT="8080"
LEDGERA_SERVER.READ_TIMEOUT="30"
LEDGERA_SERVER.WRITE_TIMEOUT="30"
LEDGERA_SERVER.IDLE_TIMEOUT="60"
LEDGERA_SERVER.CORS_ALLOWED_ORIGINS="http://localhost:3000"

LEDGERA_DATABASE.HOST="localhost"
LEDGERA_DATABASE.PORT="5432"
LEDGERA_DATABASE.USER="postgres"
LEDGERA_DATABASE.PASSWORD=""
LEDGERA_DATABASE.NAME="ledgera"
LEDGERA_DATABASE.SSL_MODE="disable"
LEDGERA_DATABASE.MAX_OPEN_CONNS="25"
LEDGERA_DATABASE.MAX_IDLE_CONNS="25"
LEDGERA_DATABASE.CONN_MAX_LIFETIME="300"
LEDGERA_DATABASE.CONN_MAX_IDLE_TIME="300"

LEDGERA_AUTH.SECRET_KEY="secret"

LEDGERA_INTEGRATION.RESEND_API_KEY="resend_key"

LEDGERA_REDIS.ADDRESS="redis://localhost:6379"

# ============================================================================
# OBSERVABILITY CONFIGURATION
# ============================================================================

# Service Identity
LEDGERA_OBSERVABILITY.SERVICE_NAME="ledgera"
LEDGERA_OBSERVABILITY.ENVIRONMENT="development"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Basic Logging Settings
LEDGERA_OBSERVABILITY.LOGGING.LEVEL="debug"
LEDGERA_OBSERVABILITY.LOGGING.FORMAT="console"
LEDGERA_OBSERVABILITY.LOGGING.SLOW_QUERY_THRESHOLD="100ms"

# ============================================================================
# NEW RELIC CONFIGURATION
# ============================================================================

# New Relic APM
LEDGERA_OBSERVABILITY.NEW_RELIC.LICENSE_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
LEDGERA_OBSERVABILITY.NEW_RELIC.APP_LOG_FORWARDING_ENABLED="true"
LEDGERA_OBSERVABILITY.NEW_RELIC.DISTRIBUTED_TRACING_ENABLED="true"
LEDGERA_OBSERVABILITY.NEW_RELIC.DEBUG_LOGGING="false"

# ============================================================================
# HEALTH CHECKS CONFIGURATION
# ============================================================================

# Health Check Settings
LEDGERA_OBSERVABILITY.HEALTH_CHECKS.ENABLED="true"
LEDGERA_OBSERVABILITY.HEALTH_CHECKS.INTERVAL="30s"
LEDGERA_OBSERVABILITY.HEALTH_CHECKS.TIMEOUT="5s"
LEDGERA_OBSERVABILITY.HEALTH_CHECKS.CHECKS="database,redis"

# ============================================================================
# BLOCKCHAIN CONFIGURATION
# ============================================================================

LEDGERA_BLOCKCHAIN.RPC_URL="http://127.0.0.1:8545"
LEDGERA_BLOCKCHAIN.CHAIN_ID=31337
LEDGERA_BLOCKCHAIN.FACTORY_ADDRESS="0x..."
LEDGERA_BLOCKCHAIN.ADMIN_PRIVATE_KEY="0x..."